<div>
  <%= form_with model: @post, local: true do |f| %>
    <%# エラーメッセージを表示 %>
    <%= render 'shared/error_messages', model: f.object %>

    <%= f.hidden_field :user_id, value: current_user.id %>

    <div class="email">
      <label for="title">
        <%= f.label :タイトル %> : </label><br>
        <div class="email_f">
        <%= f.text_field :title %></div>
    </div>

    <div class="email">
    <label for="email">
        <%= f.label :国 %>: </label><br>
        <div class="email_f">
        <%= f.collection_select :country_id, Country.all, :id, :name, prompt: "Not selected" %> </div>
    </div>

    <div class="email">
    <label for="email">
        <%= f.label :言語 %>: </label><br>
       <div class="email_f">
        <%= f.collection_select :language_id, Language.all, :id, :name, prompt: "Not selected" %></div>
    </div>

    <div class="email">
    <label for="email">
        <%= f.label :宿泊形態 %>: </label><br>
         <div class="email_f">
        <%= f.collection_select :stay_type_id, StayType.all, :id, :name, prompt: "Not selected" %></div>
    </div>

    <div class="email">
    <label for="email">
        <%= f.label :留学種類 %>:</label><br>
         <div class="email_f">
        <%= f.collection_select :kind_id, Kind.all, :id, :name, prompt: "Not selected" %></div>
    </div>

    <div class="email">
    <label for="email">
        <%= f.label :期間 %>: </label><br>
         <div class="email_f">
        <%= f.collection_select :term_id, Term.all, :id, :name, prompt: "Not selected" %></div>
    </div>
 
 <div class="email">
      <label for="email"><%= f.label :学校あるいは会社の名 %>:</label><br>
      <div class="email_f">
      <%= f.text_field :school %>
      </div>
    </div>

 <div class="email">
      <label for="email"><%= f.label :学校あるいは会社の住所 %>:</label><br>
      <div class="email_f">
      <%= f.text_field :school_address %>
      </div>
    </div>

  
    <div class="email">
    <label for="email">
        <%= f.label :専攻 %>: </label><br>
         <div class="email_f">
         <%= f.collection_select :major_id, Major.all, :id, :name, prompt: "Not selected" %></div>
    </div>

    <div class="email">
    <label for="email">
        <%= f.label :予算 %>:  </label><br>
         <div class="email_f">
         <%= f.collection_select :budget_id, Budget.all, :id, :name, prompt: "Not selected" %></div>
    </div>

    <div class="email">
    <label for="email">
        <%= f.label :写真 %>: </label><br>
        <div class="email_f">
        <%= f.file_field :image, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png" %></div>
    </div>


 <div class="email">
      <label for="email"><%= f.label :国の感想 %>:</label><br>
      <div class="email_f">
      <%= f.text_field :comment_country %>
      </div>
    </div>

    <div class="email">
      <label for="email"><%= f.label :学校あるいは会社の感想%>:</label><br>
      <div class="email_f">
      <%= f.text_field :comment_school %>
      </div>
    </div>
   
  <div class="email">
      <label for="email"><%= f.label :社会の感想%>:</label><br>
      <div class="email_f">
      <%= f.text_field :comment_social %>
      </div>
    </div>

 <div class="email">
      <label for="email"><%= f.label :自分からのアドバイス%>:</label><br>
      <div class="email_f">
      <%= f.text_field :comment_advice %>
      </div>
    </div>


    <div>
      <%= f.submit yield(:button_text) %>
    </div>
  <% end %>

  <%= link_to  "Back", :back %>

</div>