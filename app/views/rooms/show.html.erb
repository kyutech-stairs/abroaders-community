<div class="waku">
  <% if @messages.present? %>
    <!--②左コメント始-->
    <% @messages.each do |x| %>
      <% if x.user_id != current_user.id %>
        <div class="balloon6">
          <div class="faceicon">
            <strong><%= link_to x.user.name, user_path(x.user) %> さん</strong>
          </div>
          <div class="chatting">
            <div class="says">
              <p>
                <!--左ふきだし文-->
                <strong><%= x.content %></strong>
              </p>
            </div>
          </div>
        </div>
      <!--②/左コメント終-->
      <% else %>
        <!--③右コメント始-->
        <div class="mycomment">
          <!--右ふきだし文-->
          <div class="mymessage">
            <p>
              <strong><%= x.content %></strong>
            </p>
          </div>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <div class="em">
      <h3>No messages</h3>
    </div>
  <% end %>
  <!--/③右コメント終-->
  
  <%= form_with model: @message do |f| %>
    <%= f.text_field :content, placeholder: "Input your message", size: 70 %>
    <%= f.hidden_field :room_id, value: @room.id %>
    <br>
    <div class="send">
      <%= f.submit "Send" %>
    </div>
  <% end %>
</div>
