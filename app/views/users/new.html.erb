<h1>Sign up</h1>
<div>
  <%= form_with model: @user, url: users_path do |f| %>
    <div>
      <h3><%= f.label :name %></h3>
      <%= f.text_field :name %>
    </div>

    <div>
      <h3><%= f.label :email %></h3>
      <%= f.email_field :email %>
    </div>

    <div>
      <h3><%= f.label :password %></h3>
      <%= f.password_field :password %>
    </div>

    <div>
      <h3><%= f.label :password_confirmation, "Confirmation" %></h3>
      <%= f.password_field :password_confirmation %>
    </div>

    <div>
      <%= f.submit "Create my account" %>
    </div>
  <% end %>
</div>