<html>
  <head>
    <link href="signup.css" rel="stylesheet" type="text/css">
    <title>ABRRY sighup</title>
  </head>

  <body>
    <% provide(:title, 'Sign up') %>
      <div id="nav">
        <ul>
          <!--searchのとこ遷移先わからんのであとでかえて-->
          <li><%= link_to 'Search', users_path %></li>
          <li><%= link_to 'Signin', users_path %></li>
          <li><%= link_to 'Signup', signup_path %></li>
        </ul>
      </div>



      <div class="form-wrapper">
        <p>Sign Up</p>
        <form>
          <%= form_for(@user, url: users_path) do |f| %>
          <%= render 'shared/error_messages' %>

          <div class="form-item">
          <!--  <label for="Name"></label>
            <input type="name" name="name" required="required" placeholder="Name"></input>
          -->
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control'  %>
          </div>
          <div class="form-item">
            <!--
            <label for="email"></label>
            <input type="email" name="email" required="required" placeholder="Email Address"></input>
            -->
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control'  %>

          </div>
          <div class="form-item">
            <!--
            <label for="password"></label>
            <input type="password" name="password" required="required" placeholder="Password"></input>
            -->
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control'  %>


          </div>
          <div class="form-item">
            <!--
            <label for="password2"></label>
            <input type="password" name="password2" required="required" placeholder="Confirmation"></input>
            -->
            <%= f.label :password_confirmation, "Confirmation" %>
            <%= f.password_field :password_confirmation, class: 'form-control'  %>

          </div>
          <div class="button-panel">
            <%= f.submit "Create my account", class: "btn btn-primary" %>
            <!--
            <input type="submit" class="button" title="Sign Up" value="Sign Up"></input>
            -->
          </div>
            <% end %>
        </form>
        <div class="form-footer">
          <p><a href="#">Enter Mypage</a></p>
          <p><a href="#">Forgot password?</a></p>
        </div>
      </div>


  <!--
    <h1>Sign up</h1>
    <p>このぺーじは，アカウント新規作成ページです．</p>
    -->


  </body>
<html>
