<div class="signupform">
  <%= form_with model: @user, url: url, local: true do |f| %>
    <%# エラーメッセージを表示 %>
    <%= render 'shared/error_messages', model: f.object %>

    <!--<div class="name">
        <label for="name"><%= f.label :name %></label><br>
        <div class="name_field"> 
          <%= f.text_field :name %>
        </div>
    </div>-->

    <div class="signupform-name">
      <label for="name"><%= f.label :name %></label><br>
      <div class="signupform-name_field">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="signupform-email">
      <label for="email"><%= f.label :email %></label><br>
      <div class="email_field">
        <%= f.email_field :email %>
      </div>
    </div>

    <!--<div>
      <h4>
        <%= f.label :email %>: 
        <%= f.email_field :email %>
      </h4>
    </div>-->

    <div class="signupform-gender">
        <label for="gender"><%= f.label :gender %></label><br>
        <div class="gender_select"> 
          <%= f.collection_select :gender_id, Gender.all, :id, :name, prompt: "Not selected" %>
        </div>
    </div>

    <!--<div class="label-box__inner">
      <label for="image"><%= f.label :image %></label><br>
      <div class="image_field">
        <%= f.file_field :image, class: "input-default" %>
        <div class="boxFileSelect"></div>
      </div>
    </div>-->

    <div class="signupform-image">
      <label for="image" class="image_input">Image</label>
      <div class="image_field">
        <%= f.label :image %>
        <%= f.file_field :image, class: "input_default" %>
      </div>
    </div>

    <div class="signupform-password">
        <label for="password"><%= f.label :password %></label><br>
        <div class="password_field">
          <%= f.password_field :password %>
        </div>
    </div>

    <div class="signupform-confirmation">
        <label for="confirmation"><%= f.label :password_confirmation, "Confirmation" %></label><br>
        <div class="confirmation_field"> 
          <%= f.password_field :password_confirmation %>
        </div>
    </div>

    <hr class="signupform-style">

    <div class="signupform-button">
      <!--<%= f.submit yield(:button_text) %>-->
      <%= f.submit 'Create my account', :class=>"btn" %>
    </div>

  <% end %>
  <%= link_to  "Back", :back, class: "back" %>

</div>