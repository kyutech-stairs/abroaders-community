<div class = "mypagedetail">
  <p class = "mypagetitle">Mypage</p>
  <div class = "mypageimage">
    <%= image_tag @user.image.url %>
  </div>
  <div class = "mypagecontents">
    <p class = "mypagename"><%= @user.name %></p>
    <p class = "mypageeg">E-mail: <%= @user.email %></p>
    <p class = "mypageeg">Gender: <%= @user.gender.name %></p>
  </div>
</div>
